{
  "name": "oa-agent-dashboard",
  "version": "1.0.0",
  "description": "High-tech dashboard for monitoring OA and agent activities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev:secure": "concurrently \"npm run dev:server:secure\" \"npm run dev:client\"",
    "dev:server:secure": "nodemon server/index-secure.js",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "start:secure": "node server/index-secure.js",
    "setup": "npm install && cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "audit:security": "node ../security-audit.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^6.0.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "isomorphic-dompurify": "^2.9.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}