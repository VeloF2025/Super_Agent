{
  "name": "oa-agent-dashboard",
  "version": "1.0.0",
  "description": "High-tech dashboard for monitoring OA and agent activities",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "setup": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}